      - seq_lib/lc_ctrl_v1_sec_token_digest_vseq.sv: {is_include_file: true}
      - seq_lib/lc_ctrl_v1_claim_transition_if_vseq.sv: {is_include_file: true}
      - seq_lib/lc_ctrl_v1_stress_all_vseq.sv: {is_include_file: true}
    file_type: systemVerilogSource

generate:
  ral:
    generator: ralgen
    parameters:
      name: lc_ctrl_v1
      ip_hjson: ../../data/lc_ctrl_v1.hjson

targets:
  default:
    filesets:
      - files_dv
    generate:
      - ral
