      - lc_ctrl_v1_env.sv: {is_include_file: true}
      - seq_lib/lc_ctrl_v1_vseq_list.sv: {is_include_file: true}
      - seq_lib/lc_ctrl_v1_base_vseq.sv: {is_include_file: true}
      - seq_lib/lc_ctrl_v1_common_vseq.sv: {is_include_file: true}
      - seq_lib/lc_ctrl_v1_smoke_vseq.sv: {is_include_file: true}
