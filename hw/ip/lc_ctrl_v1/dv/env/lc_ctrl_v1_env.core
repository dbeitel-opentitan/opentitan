name: "lowrisc:dv:lc_ctrl_v1_env:0.1"
description: "LC_CTRL DV UVM environment"
filesets:
  files_dv:
    depend:
      - lowrisc:dv:ralgen
      - lowrisc:dv:cip_lib
      - lowrisc:dv:jtag_riscv_agent
      - lowrisc:dv:kmac_app_agent
      - lowrisc:dv:lc_ctrl_v1_dv_utils
    files:
      - lc_ctrl_v1_env_pkg.sv
      - lc_ctrl_v1_if.sv
      - lc_ctrl_v1_parameters_cfg.sv: {is_include_file: true}
      - lc_ctrl_v1_env_cfg.sv: {is_include_file: true}
      - lc_ctrl_v1_env_cov.sv: {is_include_file: true}
      - lc_ctrl_v1_virtual_sequencer.sv: {is_include_file: true}
